<%= semantic_form_for @student do |f| %>
  <%= f.inputs do %>
    <%= f.input :name, :input_html => { :size => 20 }, :hint => "Enter correct values", :input_html => { :value => "Enter name" } %>
    <%= f.input :email, :input_html => { :size => 20 }, :required => true %>
    <%= f.input :cell, :input_html => { :size => 20 } %>
    <%= f.input :gender, :as => :radio, :collection => [:Male, :Female], :label => "Sex" %>
    <%= f.input :group,  :as => :select, :collection => Order.pluck(:ord_name) %>
    <%= f.input :address, :input_html => { :class => 'autogrow', :rows => 10, :cols => 20, :maxlength => 1000  } %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
