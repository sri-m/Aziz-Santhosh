<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @customer.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @customer.email %>
</p>

<p>
  <strong>Cell:</strong>
  <%= @customer.cell %>
</p>

<p>
  <strong>Address:</strong>
  <%= @customer.address %>
</p>

<table>
<th>Order Name:</th><th>Order Price:</th><th>QTY</th>
<% @customer.orders.each do |my_orders| %>
<tr>
	<td><%= my_orders.ord_name %></td><td><%= my_orders.ord_price %></td><td><%= my_orders.ord_qty %></td>
</tr>
<% end %>
</table>

<%= link_to 'Edit', edit_customer_path(@customer) %> |
<%= link_to 'Back', customers_path %>
